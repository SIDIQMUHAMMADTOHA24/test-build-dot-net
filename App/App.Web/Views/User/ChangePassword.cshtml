
@{
    ViewBag.Title = "User";
    ViewBag.CTitle = "Change Password";
}

    <div class="card card-custom gutter-b">
        <div class="card-header">
            <div class="card-title">
                <span class="card-icon">
                    <i class="flaticon2-layers text-primary"></i>
                </span>
                <h3 class="card-label">
                    Change Password
                </h3>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label text-alert">Now Password</label>
                <div class="col-lg-9 col-xl-6">
                    <input type="password" class="form-control form-control-lg form-control-solid mb-2" id="password" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label text-alert">New Password</label>
                <div class="col-lg-9 col-xl-6">
                    <input type="password" class="form-control form-control-lg form-control-solid" id="new_password" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-xl-3 col-lg-3 col-form-label text-alert">Confirm Password</label>
                <div class="col-lg-9 col-xl-6">
                    <input type="password" class="form-control form-control-lg form-control-solid" id="password_confirm" />
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <button type="reset" class="btn btn-secondary">Cancel</button>
                    <button type="button" class="btn btn-success mr-2" onclick="ChangePassword()">Submit</button>
                </div>
            </div>
        </div>
    </div>

<script src="~/assets/js/app/user/change_password.js?v=@System.Configuration.ConfigurationManager.AppSettings.Get("vesion_js")"></script>

