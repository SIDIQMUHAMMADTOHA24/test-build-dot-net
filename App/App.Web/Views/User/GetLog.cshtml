
@{
    ViewBag.Title = "User";
    ViewBag.CTitle = "List User Log";
}

@{
    Html.RenderPartial("_SearchHeader");
}

<div class="card card-custom gutter-b">
    <div class="card-header">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-layers text-primary"></i>
            </span>
            <h3 class="card-label">
                List User Log
            </h3>
        </div>
        <div class="card-toolbar">
            <a href="javascript:;" onclick="ModalUpdateLogStatus()" class="btn btn-primary font-weight-bolder">
                Selected Update Status
            </a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="get_table">
            <thead>
                <tr>
                    <th class="text-center"></th>
                    <th class="text-center">User Name</th>
                    <th class="text-center">Activity</th>
                    <th class="text-center">Time Input</th>
                    <th class="text-center">IP</th>
                    <th class="text-center">Apps</th>
                    <th class="text-center">Status</th>
                </tr>
            </thead>
        </table>
    </div>

    <div class="modal fade" id="model_update_log_status" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Update Log Status</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-lg-12 col-form-label">Are you sure to change the log status?</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="id_user_info">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" onclick="UpdateLogStatus()">Yes</button>
                </div>
            </div>
        </div>
    </div>

</div>

<script src="~/assets/js/app/user/get_log.js?v=@System.Configuration.ConfigurationManager.AppSettings.Get("vesion_js")"></script>

