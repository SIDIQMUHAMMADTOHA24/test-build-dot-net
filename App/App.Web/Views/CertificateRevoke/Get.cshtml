
@{
    ViewBag.Title = "Revoke All Certificate";
}

<div class="card card-custom gutter-b">
    <div class="card-header">
        <div class="card-title">
            <span class="card-icon">
                <i class="flaticon2-layers text-primary"></i>
            </span>
            <h3 class="card-label">
                Revoke All Certificate
            </h3>
        </div>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <button type="button" onclick="ModalProcessRevokeAll()" class="btn btn-primary btn-lg btn-block">Revoke All</button>
        </div>
    </div>
</div>

<div class="modal fade" id="modal_certificate_revoke_all" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Revoke All Certificate</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-lg-12 col-form-label">Are you sure to revoke all certificate?</label>
                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="id_user_package">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="ProcessRevokeAll()">Yes</button>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/app/certificate_revoke/process.js?v=@System.Configuration.ConfigurationManager.AppSettings.Get("vesion_js")"></script>

